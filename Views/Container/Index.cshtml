@model IEnumerable<FleetManagement.Models.Container>

@{
    ViewBag.Title = "Index";
}

<h2>Containers</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ContainerID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContainerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vessel.VesselName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ContainerID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContainerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vessel.VesselName)
        </td>
        <td>
            @Html.ActionLink("Transfer", "Transfer", new { id = item.ContainerID }) 
       
        </td>
    </tr>
}

</table>
